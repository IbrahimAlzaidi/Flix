<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/marquee_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_44dp"
                android:background="@drawable/ic_backbutton_movie_details"
                app:layout_constraintStart_toStartOf="@id/marquee_image"
                app:layout_constraintTop_toTopOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginTop="@dimen/_44dp"
                android:background="@drawable/ic_favourate_movie_details"
                app:layout_constraintEnd_toEndOf="@id/marquee_image"
                app:layout_constraintTop_toTopOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginTop="@dimen/_44dp"
                android:background="@drawable/ic_saved_movie_details"
                app:layout_constraintEnd_toStartOf="@id/favorite_button"
                app:layout_constraintTop_toTopOf="@id/marquee_image"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>