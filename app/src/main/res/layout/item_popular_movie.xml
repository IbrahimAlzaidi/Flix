<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.red_velvet.flix.ui.home.HomeUiState.MediaUiState" />

        <variable
            name="adapterRecycler"
            type="com.red_velvet.flix.ui.home.adapter.MovieAdapter" />

        <variable
            name="movieType"
            type="com.red_velvet.flix.ui.home.HomeUiState.HomeItem" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/text_title"
            style="@style/SemiBold.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:text="@{movieType.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Popular Movies" />

        <TextView
            android:id="@+id/text_see_all"
            style="@style/Regular.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:onClick="@{() -> adapterRecycler.listener.onClickSeeAllMovie(movieType)}"
            android:text="@string/see_all"
            android:textColor="@color/media_card_subtitle_color"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:onClick="@{()->adapterRecycler.listener.onClickMovie(item.id)}"
            app:layout_constraintEnd_toEndOf="@+id/text_see_all"
            app:layout_constraintStart_toStartOf="@+id/text_title"
            app:layout_constraintTop_toBottomOf="@+id/text_title">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_movie"
                android:layout_width="@dimen/media_card_popular_movie"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1.75:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:posterImage="@{item.imageUrl}"
                app:shapeAppearanceOverlay="@style/CardCorners.Medium" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/rounded_corner"
                app:layout_constraintBottom_toBottomOf="@+id/image_movie"
                app:layout_constraintEnd_toEndOf="@id/image_movie"
                app:layout_constraintStart_toStartOf="@id/image_movie" />


            <TextView
                android:id="@+id/movie_title"
                style="@style/SemiBold.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_semi_small"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="@dimen/spacing_too_small"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="240dp"
                android:text="@{item.title}"
                app:layout_constraintBottom_toTopOf="@+id/movie_date"
                app:layout_constraintStart_toStartOf="@+id/image_movie"
                tools:text="The Flash" />

            <TextView
                android:id="@+id/movie_date"
                style="@style/Regular.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="start"
                android:maxWidth="240dp"
                app:formattedDate="@{item.date}"
                app:language="@{item.originalLanguage}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/movie_title"
                tools:text="The Flash" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

