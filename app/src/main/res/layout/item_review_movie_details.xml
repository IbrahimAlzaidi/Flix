<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="item"
    type="com.red_velvet.flix.ui.movieDetails.MovieUiState.MovieReview" />
        <variable
            name="listener"
            type="com.red_velvet.flix.ui.movieDetails.OnMovieReviewInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_270dp"
        android:layout_height="@dimen/_142dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:onClick="@{()->listener.onMovieReviewClick(item.id)}"
        app:cardBackgroundColor="@color/Secondary"
        app:cardCornerRadius="@dimen/_16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_imdb_star"
                android:layout_width="@dimen/_12dp"
                android:layout_height="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:src="@drawable/ic_imdb_movie_rate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/imdb_rate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(item.rating)}"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/font_primary"
                android:layout_marginStart="@dimen/_4dp"
                app:layout_constraintTop_toTopOf="@id/ic_imdb_star"
                app:layout_constraintBottom_toBottomOf="@id/ic_imdb_star"
                app:layout_constraintStart_toEndOf="@id/ic_imdb_star" />

            <TextView
                android:id="@+id/review_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.movieReviewer}"
                android:layout_marginTop="@dimen/_4dp"
                android:textColor="@color/font_primary"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/_12sp"
                app:layout_constraintTop_toBottomOf="@id/imdb_rate_text"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/font_accent"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_8dp"
                android:text="@{item.movieReview}"
                android:textSize="@dimen/_12sp"
                android:maxLines="5"
                android:layout_marginBottom="@dimen/_12sp"
                app:layout_constraintTop_toBottomOf="@id/review_author"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>