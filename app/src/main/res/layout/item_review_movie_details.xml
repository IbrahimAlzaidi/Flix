<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_270dp"
    android:layout_height="@dimen/_142dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/_8dp"
    app:cardBackgroundColor="@color/Secondary"
    app:cardCornerRadius="@dimen/_16dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_12dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_imdb_star"
            android:layout_width="@dimen/_12dp"
            android:layout_height="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:src="@drawable/ic_imdb_movie_rate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/imdb_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/font_primary"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintTop_toTopOf="@id/ic_imdb_star"
            app:layout_constraintBottom_toBottomOf="@id/ic_imdb_star"
            app:layout_constraintStart_toEndOf="@id/ic_imdb_star"
            />
        <TextView
            android:id="@+id/review_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Written by MSB on May 31,2023"
            android:layout_marginTop="@dimen/_4dp"
            android:textColor="@color/font_primary"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/_12sp"
            app:layout_constraintTop_toBottomOf="@id/imdb_rate_text"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/montserrat_regular"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Halle Bailey served a very good performance with a lot of charisma and passion, she also has an impressive voice. In some parts people were clapping from excitement and I shed a tear since I saw her performing her first song."
            android:textSize="@dimen/_12sp"
            android:maxLines="5"
            android:layout_marginBottom="@dimen/_12sp"
            app:layout_constraintTop_toBottomOf="@id/review_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>